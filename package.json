{
  "name": "@portertech/lm-studio-mcp-server",
  "version": "1.0.2",
  "description": "MCP server for LM Studio model management",
  "main": "dist/index.js",
  "bin": {
    "lm-studio-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx --watch src/index.ts",
    "start:prod": "node dist/index.js",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "mcp",
    "lm-studio",
    "ai",
    "models",
    "server"
  ],
  "author": "Sean Porter",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@lmstudio/sdk": "^1.5.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^4.0.17"
  }
}
